function dealerHitMe() {
	Shuffle(deck);
dealerTotal = dealerTotal + deck[1];
dealerHistory.push(deck[1]);
console.log(dealerHistory);
console.log(dealerTotal);
}

function done() {
		for (; dealerTotal < 17; ) {
			dealerHitMe();
		};
	
	document.getElementById("btn1").disabled = true;
	document.getElementById("btn2").disabled = true;
	document.getElementById("btn2").disabled = true;
	scoreBoard2()
	if (dealerTotal > 21){
		window.alert("you win!!")
		document.getElementById("dhistory").innerHTML = "DEALER HISTORY: " + dealerHistory;
	}else if (total > dealerTotal) {
		window.alert("you win!!")   
		document.getElementById("dhistory").innerHTML = "DEALER HISTORY: " + dealerHistory;
    }else if (total === dealerTotal) {
    	window.alert("you tied.")
    	document.getElementById("dhistory").innerHTML = "DEALER HISTORY: " + dealerHistory;
    }else {
    	window.alert("you lose!!") 
    	document.getElementById("dhistory").innerHTML = "DEALER HISTORY: " + dealerHistory;
    }
}

