function Shuffle(o) {
	for(var j, x, i = o.length; i; j = parseInt(Math.random() * i), x = o[--i], o[i] = o[j], o[j] = x);
	return o;
};

function scoreBoard() {
    document.getElementById("myscore").innerHTML = "PLAYER 1: " + total;
