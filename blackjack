var total = 0;
var total2 = 0;
function hitMe() {
	Shuffle(deck);
for (; dealerTotal < 17; ) {
	dealerHitMe();
};

window.alert(deck[0]);
		if (deck[0] === 1 || deck[0] === 11) {
			var ace = prompt("You got an ace would you like 1 or 11");
				if (ace === "1") {
					total = total + 1
					cardHistory.push(1)
					document.getElementById("chistory").innerHTML = "CARD HISTORY: " + cardHistory;
				}else if (ace === "11"){
					total = total + 11
					cardHistory.push(11)
					document.getElementById("chistory").innerHTML = "CARD HISTORY: " + cardHistory;
				}else{
					total = total + deck[0]
					cardHistory.push(deck[0])
					document.getElementById("chistory").innerHTML = "CARD HISTORY: " + cardHistory;
				}
		}else{
			total = total + deck[0];
			cardHistory.push(deck[0]);
			document.getElementById("chistory").innerHTML = "CARD HISTORY: " + cardHistory;
		} 
console.log(total);
scoreBoard()
if (total > 21) {
	document.getElementById("btn1").disabled = true;
